@model IEnumerable<VideoGameStore.Models.Sales_Report>

@{
    ViewBag.Title = "Sales Report";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.game_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Units_Sold)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Profit_Margin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sales_Volume)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total_Profit)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.game_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Units_Sold)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Profit_Margin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sales_Volume)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total_Profit)
        </td>
    </tr>
}

</table>
